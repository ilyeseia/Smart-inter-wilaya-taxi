# Smart Inter Wilaya Taxi - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=jdbc:postgresql://postgres:5432/smart_taxi_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-secure-password

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =====================================================
# JWT CONFIGURATION
# =====================================================
JWT_SECRET=your-256-bit-secret-key-at-least-32-characters-long
JWT_EXPIRATION=86400000

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
SPRING_PROFILES_ACTIVE=production
MAVEN_OPTS=-Xmx2g -Xms1g
JAVA_OPTS=-XX:+UseG1GC -XX:+UseStringDeduplication

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# =====================================================
# EXTERNAL SERVICES
# =====================================================
# Google Maps API Key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenWeather API Key
OPENWEATHER_API_KEY=your-openweather-api-key

# =====================================================
# MONITORING & LOGGING
# =====================================================
LOG_LEVEL=INFO
METRICS_ENABLED=true

# =====================================================
# DEPLOYMENT SETTINGS
# =====================================================
DEPLOYMENT_ENV=production
CONTAINER_REGISTRY=ghcr.io
IMAGE_NAME=ilyeseia/smart-inter-wilaya-taxi